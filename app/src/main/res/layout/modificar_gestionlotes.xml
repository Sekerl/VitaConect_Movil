<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- ScrollView para desplazamiento en orientación horizontal cuando sea necesario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <!-- ConstraintLayout dentro del ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!--header-->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="#23ad55"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar Lote"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" /> <!-- Centra el texto dentro del TextView -->
            </LinearLayout>
            <!-- CardView Section -->

            <!--footer-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSection"
                android:layout_width="379dp"
                android:layout_height="271dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/color_graydark"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toTopOf="@id/footerLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                app:layout_constraintVertical_bias="0.39">

                <!-- Scrollable Content Inside Card -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Spinner
                            android:id="@+id/loteProdSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_marginTop="40dp"
                            android:background="@android:color/white"
                            android:hint="Seleccione Producto"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.531"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                        />

                        <Spinner
                            android:id="@+id/loteProvSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:background="@android:color/white"
                            android:hint="Seleccione Proveedor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fechaInput" />

                        <EditText
                            android:id="@+id/fechaInput"
                            android:layout_width="217dp"
                            android:layout_height="0dp"
                            android:layout_margin="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@android:color/white"
                            android:hint="Ingrese Fecha Vencimiento"
                            android:inputType="date"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:focusable="false"
                            android:clickable="true"
                            app:layout_constraintHorizontal_bias="0.006"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/stockInput" />




                        <EditText
                            android:id="@+id/stockInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:background="@android:color/white"
                            android:hint="Ingrese Stock"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.531"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/loteProdSpinner" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonModificar"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="@color/color_green"
                            android:text="Modificar Lote"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.547"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/loteProvSpinner"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_menu_inicio"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_blue"
                            android:text="Menú Principal"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.547"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/buttonModificar" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/footerLayout"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="#120d38"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/footerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2024 Farmacia VitaConect. Todos los derechos reservados"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
