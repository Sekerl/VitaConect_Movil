<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para desplazamiento en orientación horizontal cuando sea necesario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <!-- ConstraintLayout dentro del ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <!--header-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#23ad55"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Producto"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" /> <!-- Centra el texto dentro del TextView -->
    </LinearLayout>

    <!-- CardView Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_graydark"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- Contenido dentro del CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <EditText
                android:id="@+id/txtNombreProducto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Nombre del producto"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>

            <EditText
                android:id="@+id/txtConcentracion"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Concentración"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp" />

            <EditText
                android:id="@+id/txtAdicional"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Adicional"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>

            <EditText
                android:id="@+id/txtPrecio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>


            <!-- Spinner para seleccionar Laboratorio -->
            <Spinner
                android:id="@+id/spinnerLaboratorio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>

            <!-- Spinner para seleccionar Tipo de Producto -->
            <Spinner
                android:id="@+id/spinnerTipoProducto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>

            <!-- Spinner para seleccionar Presentación -->
            <Spinner
                android:id="@+id/spinnerPresentacion"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:layout_margin="16dp"/>

            <!-- Botón para agregar producto -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonagregar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/color_green"
                android:text="Agregar Producto"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Menú Principal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="@color/color_blue"
                app:layout_constraintTop_toBottomOf="@id/buttonagregar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--footer-->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#120d38"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2024 Farmacia VitaConect. Todos los derechos reservados"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
